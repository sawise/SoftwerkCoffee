<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".SoftwerkCoffeee">




    <FrameLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">
        <com.softwerk.coffee2.VerticalProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/coffeeprogress"
            android:layout_marginTop="45sp"
            android:layout_marginLeft="8sp"
            android:layout_width="160sp"
            android:layout_height="135sp"/>

        <ImageView
            android:src="@drawable/coffeepot00"
            android:layout_width="200sp"
            android:layout_height="200sp"/>

    </FrameLayout>





    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coffeemachine: "
            android:textSize="15dp"
            android:layout_gravity="center"/>
        <Switch
            android:id="@+id/coffeeSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coffeepowder: "
            android:textSize="15dp"
            android:layout_gravity="center"/>
        <Switch
            android:id="@+id/coffeepowderSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
     </LinearLayout>

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FF0000"
            android:textSize="20dp"
            android:layout_gravity="center"/>

    <LinearLayout
        android:id="@+id/timeLeftLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible">

        <TextView
            android:id="@+id/timeLefttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time left: "
            android:textColor="#000000"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/timeLeftvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FF0000"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/timeElapsedLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:visibility="invisible">
        <TextView
            android:id="@+id/timeElapsedtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time elapsed: "
            android:textColor="#000000"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/timeElapsedvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FF0000"
            android:textSize="20dp"/>
    </LinearLayout>

    </LinearLayout>
</ScrollView><!-- From: file:/home/sam/AndroidStudioProjects/Coffee2Project/Coffee2/src/main/res/layout/softwerkcoffee.xml -->